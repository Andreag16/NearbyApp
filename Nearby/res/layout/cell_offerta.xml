<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtNomeOfferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textColor="#b20000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtDescrizioneOfferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtNomeOfferta"
                android:layout_below="@+id/txtNomeOfferta"
                android:layout_marginTop="19dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtCittaOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtDescrizioneOfferta"
                android:layout_below="@+id/txtDescrizioneOfferta"
                android:text="TextView"
                android:textColor="#000" />
            
            <RelativeLayout
                android:id="@+id/infoposto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCittaOff"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#d3d3d3" >

                <TextView
                    android:id="@+id/txtNomePosto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="TextView"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txtDistanzaOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="#000" />

            </RelativeLayout>

            

	    </RelativeLayout>
</android.support.v7.widget.CardView>

