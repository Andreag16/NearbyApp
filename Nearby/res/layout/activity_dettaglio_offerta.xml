<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE6CA"
    tools:context="${relativePackage}.${activityClass}" >
    
    <ScrollView
        android:id="@+id/scrolldetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >
	    <android.support.v7.widget.CardView
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:id="@+id/cvinfo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	                <RelativeLayout
	                    android:id="@+id/relativelayout"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" >
	
	                    <LinearLayout
	                        android:id="@+id/llDescrizione"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_alignParentRight="true"
	                        android:layout_marginRight="5dp"
	                        android:layout_marginTop="5dp" >
	
	                        <TextView
	                            android:id="@+id/txtDescrOff"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:drawableLeft="@drawable/ic_info_outline_black_24dp"
	                            android:drawablePadding="5dp"
	                            android:text="TextView"
	                            android:textAppearance="?android:attr/textAppearanceLarge"
	                            android:textColor="#000" />
	                    </LinearLayout>
	
	                    <LinearLayout
	                        android:id="@+id/llnomeposto"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_alignParentRight="true"
	                        android:layout_marginLeft="30dp"
	                        android:layout_below="@+id/llDescrizione">
	
	                        <!-- <TextView
	                            android:id="@+id/lblNomePostoOfferta"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
	                            android:drawablePadding="5dp"
	                            android:text="Nome posto: "
	                            android:textAppearance="?android:attr/textAppearanceLarge"
	                            android:textColor="#000"
	                            android:textStyle="bold" /> -->
	
	                        <TextView
	                            android:id="@+id/txtDetOffNomePosto"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="TextView"
	                            android:textAppearance="?android:attr/textAppearanceLarge"
	                            android:textColor="#000" />
	                    </LinearLayout>
	
	                    <LinearLayout
	                        android:id="@+id/llTown"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_alignParentRight="true"
	                        android:layout_below="@+id/llnomeposto"
	                        android:layout_marginLeft="5dp"
	                        android:layout_marginRight="5dp"
	                        android:layout_marginTop="5dp"
	                        android:layout_marginBottom="5dp" >

	                        <ImageView
	                            android:id="@+id/imgcit"
	                            android:layout_width="30dp"
	                            android:layout_height="30dp"
	                            android:layout_marginTop="10dp"
	                            android:background="@drawable/ic_place_black_24dp" />
							<RelativeLayout 
							    android:id="@+id/relposto"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content">
		                        <TextView
		                            android:id="@+id/txtDetOffertaTown"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:text="TextView"
		                            android:textAppearance="?android:attr/textAppearanceLarge"
		                            android:textColor="#000" />
		                        
		                        <TextView
		                            android:id="@+id/txtDetOffertaIndirizzo"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_below="@id/txtDetOffertaTown"
		                            android:text="TextView"
		                            android:textAppearance="?android:attr/textAppearanceLarge"
		                            android:textColor="#000" />
                        </RelativeLayout>

							<android.support.design.widget.FloatingActionButton
							    android:id="@+id/btnMappaOfferta"
							    android:layout_width="match_parent"
							    android:layout_height="wrap_content"
							    app:layout_anchor="@id/llTown"
							    app:layout_anchorGravity="right"
							    android:background="@drawable/ic_directions_black_24dp"
							    android:clickable="true"
							    android:elevation="10dp" />

                    </LinearLayout>
	                </RelativeLayout>
	            </android.support.v7.widget.CardView>
	</ScrollView>
</RelativeLayout>
