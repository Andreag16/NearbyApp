<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/llnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/lblDetNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000" />
    </LinearLayout>

    <com.loopj.android.image.SmartImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/llDescrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llnome"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llnome" >

        <TextView
            android:id="@+id/lblDetDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrizione: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llTelephone"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llDescrizione" >

        <TextView
            android:id="@+id/lblDetGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordinate GPS: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llGPS"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/logo" >

        <TextView
            android:id="@+id/lblDetTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono: "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llTelephone"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/logo" >

        <TextView
            android:id="@+id/lblDetTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CittÃ : "
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000" />
    </LinearLayout>

</RelativeLayout>